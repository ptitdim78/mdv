{% extends 'base.html.twig' %}

{% block title %}Hello ProductsController!{% endblock %}

{% block body %}

<div class="section-wrapper" id="contacts">
    <div class="contacts">
        <div class="row">
            <div class="container">
                <div style="display: flex; justify-content: center" class="section-title wow fadeInDown"
                     data-wow-duration="1s" data-wow-delay="300ms">
                    <h1 id="titreSection"><span>Cr√©er un produit</span></h1>
                </div>
            </div>
        </div>
        <div class="section-wrapper">
            <div class="container">
                <div class="row">
                    <div class="wrapper-contact">
                        <div style="width: 50%!important;" class="contact_form">
                            <div class="row wow fadeInRight" data-wow-duration="1s" data-wow-delay="800ms">
                                <form id="contact-form" method="post" action="#">
                                    {{ form_start(form, {attr : {novalidate: 'novalidate'}}) }}
                                    <div class="form-group">
                                        {{ form_row(form.title) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_row(form.description) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_row(form.longueur) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_row(form.hauteur) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_row(form.profondeur) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_row(form.poids) }}
                                    </div>
                                    <div disabled="true" class="form-group">
                                        {{ form_row(form.composition) }}
                                    </div>
                                    <div class="col-md-6">
                                        <div style="display: flex" class="form-group">
                                            <div style="padding-right: 10px">{{ form_label(form.image) }}</div>
                                            {{ form_widget(form.image)}}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.online) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Envoyer">
                                    </div>
                                    {{ form_end(form) }}
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
