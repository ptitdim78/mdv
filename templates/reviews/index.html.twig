{% extends 'base.html.twig' %}

{% block body %}
    <div class="section-wrapper">
        <div class="contacts">
            <!-- Block Title -->
            <div class="row">
                <div class="container">
                    <div style="display: flex; justify-content: center" class="section-title wow fadeInDown"
                         data-wow-duration="1s" data-wow-delay="300ms">
                        <h1 id="titreSection"><span>Avis</span></h1>
                    </div>
                    <h3 class="wow fadeInUp" data-wow-duration="1s" data-wow-delay="300ms">Votre <span
                                class="main-color"></span>avis compte</h3>
                </div>
            </div>
        <div class="row wow fadeInRight" data-wow-duration="1s" data-wow-delay="800ms">
            <form action="post" id="contact-form">
                {{ form_start(form, {attr : {novalidate: 'novalidate'}}) }}
                <div class="container">
                    <div class="wrapper-contacts">
                        <div class="contact_form">
                            <div class="col-lg-6 col-sm-6">
                                <div class="form-group">
                                    {{ form_row(form.firstname) }}
                                    {{ form_row(form.lastname) }}
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-6">
                                <div class="form-group">
                                    {{ form_row(form.message, {attr: {rows:6}}) }}
                                </div>
                            </div>
                            <div class="col-lg-12 col-sm-12">
                                <div class="form-group">
                                    {{ form_row(form.rating) }}
                                    <span><i class="fas fa-star"></i>{{ reviews.rating }}</span>
                                    <span><i class="fas fa-star"></i>{{ reviews.rating }}</span>
                                    <span><i class="fas fa-star"></i>{{ reviews.rating }}</span>
                                    <span><i class="fas fa-star"></i>{{ reviews.rating }}</span>
                                    <span><i class="fas fa-star"></i>{{ reviews.rating }}</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <input style="width: 50%" type="submit" class="" value="Envoyer">
                            </div>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
{% endblock %}
