{% extends 'base.html.twig' %}

{% block body %}
    {% block javascripts %}
        <script>
            function coeur(){
                id2 = document.getElementById('2')
                id3 = document.getElementById('3')
                id2.classList = 'filtreVitrine'
                id3.classList = 'filtreVitrine'
            }
        </script>
    {% endblock %}

    <style>  .filtreVitrine{
            display: none;
        }</style>


    <ul id="filters" class="wow fadeInRight" data-wow-duration="1s" data-wow-delay="300ms">
        <a><span class="filter active" data-filter="all">All</span></a>
        <li  onclick="coeur()"><span class="filter" data-filter=".category-1">coeur</span></li>
        <li onclick="promo"><span class="filter" data-filter=".category-2">VIDEO</span></li>
        <li onclick="fds"><span class="filter" data-filter=".category-3">PROJECTS</span></li>
    </ul>

    <section class="section-wrapper" id="1">
        <div class="team">
            <div class="meet-the-team">
                <div class="container">
                    <div class="row">
                        <div class="element-title wow fadeInDown element-title" data-wow-duration="1s" data-wow-delay="300ms">
                            <h1 id="titreSection">Nos coups de coeur</h1>
                        </div>
                    </div>
                </div>
                <div class="row wow fadeInRight" data-wow-duration="1s" data-wow-delay="800ms">
                    <div class="container">
